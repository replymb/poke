<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_round_hourglass_top_24"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/pokeListItemThumbnail_imageView" />

    <TextView
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@id/pokeListItemThumbnail_imageView"
        app:layout_constraintTop_toTopOf="@id/pokeListItemThumbnail_imageView"
        app:layout_constraintStart_toEndOf="@id/pokeListItemThumbnail_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/pokeListItemName_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ProgressBar
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/pokeListItemLoading_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>